<!-- Main container for the contact form -->
<div class="container my-5">
    <!-- Main heading for the contact section -->
    <h1 class="text-center mb-4 text-primary">Contact Me</h1>
    <p class="text-center">If you have questions or concerns about being my friend, please feel free to message me!</p>
    
    <!-- Contact box to contain the form -->
    <div class="contact-box p-4 bg-light rounded shadow">
        <!-- Main contact form section -->
        <div class="main-contact">
            <h3 class="text-center mb-4">Send Your Request</h3>

            <!-- Contact form with input fields for user inquiries -->
            <form>
                <div class="row mb-3">
                    <!-- Input group for full name -->
                    <div class="col-md-6 mb-3">
                        <label for="name" class="form-label">Full Name, or Not</label>
                        <input type="text" class="form-control" id="name" placeholder="Anas Hussain">
                    </div>

                    <!-- Input group for email -->
                    <div class="col-md-6 mb-3"> <!--Bootstrap's Half-width column, margin -->
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Anas.Hussain@lol.com">
                    </div>

                    <!-- Input group for phone number -->
                    <div class="col-md-6 mb-3">
                        <label for="phone" class="form-label">Phone</label>
                        <input type="tel" class="form-control" id="phone" placeholder="(416)-782-9024">
                    </div>

                    <!-- Input group for subject of the inquiry -->
                    <div class="col-md-6 mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="subject" placeholder="Inquiry...">
                    </div>
                </div>

                <!-- Label and textarea for the user's message -->
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" rows="5" placeholder="Don't shoot the messenger..."></textarea>
                </div>

                <!-- Submit button to send the form -->
                <div class="text-center"> <!-- Center content with Bootstrap -->
                    <button type="submit" class="btn btn-primary mt-3">SEND</button>
                </div>
            </form>
        </div>
    </div>
</div>
